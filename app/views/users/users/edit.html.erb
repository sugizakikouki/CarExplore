<%= form_with model: @user, url: current_user_path, local: true do |f| %>
   <%= render 'users/shared/error_messages', object: f.object %>
   <%= f.label :email %>
   <%= f.email_field :email, class: 'form-control mb-3' %>

   <%= f.label :username %>
   <%= f.text_field :username, class: 'form-control mb-3' %>

   <%= f.label :name %>
   <%= f.text_field :name, class: 'form-control mb-3' %>

   <%= f.label :image %>
   <%= image_tag @user.image.url if @user.image? %>
   <%= f.file_field :image,class: 'form-control mb-3', accept: 'image/*' %>
   <%= f.hidden_field :image_cache %>
   
   <%= f.label :profile %>
   <%= f.text_field :profile, class: 'form-control-lg mb-3' %>
   

   <%= f.submit "更新", class: "btn btn-primary"%>
<%end%>
