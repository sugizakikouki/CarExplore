<div class="search">
    <%= render "search", post: @post %>
</div>
<div class="container1">
  <div class="row">
    <div class="col-md-8">
        <div class="flex">
            <% if @posts.any? %>
                <% @posts.each do |post| %>
                    <div class="card mt-4">
                        <div class="plf">
                            <div><%= image_tag post.user.image_url %></div>
                            <div class="name"><%= post.user.name %></div>
                            <div class="name"><%= post.user.username %></div>
                        </div>
                    </div>
                    <div class="content">
                        <div><%= post.content %></div>
                        <% if post.images.attached? %>
                            <div class="image-container">
                                <% post.images.each do |image| %>
                                    <%= image_tag image, class: 'img-fluid' %>
                                <% end %>
                            </div>
                        <% end %>
                    </div>
                </div>
                <% end %>
            <% else %>
                <div>No posts found.</div>
            <% end %>
        </div>
        <div class="col-md-4 text-light">
            <%= form_with model: @post do |f| %>
                <div class="mt-3">
                    <h4>Post</h4>
                    <%= f.text_area :content, class: 'form-control', rows: 8, cols: 80  %>
                </div>
                <div class="mt-3">
                    <h5>Tag</h5>
                    <%= f.text_field :tag_name%>
                </div>
                <div class="mt-3">
                    <h5>Image</h5>
                    <%= f.file_field :images, multiple: true, accept: "image/*" %>
                </div>
                <button type="submit" class="btn-s btn-sm mt-3" style="width: 80px;">Post</button>
            <% end %>
        </div>
    </div>
</div>



